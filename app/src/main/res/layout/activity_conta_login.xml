<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ContaLogin" android:background="@android:color/holo_red_light">

    <TextView
            android:text="HellPets"
            android:layout_width="363dp"
            android:layout_height="66dp"
            android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/EmaileditText2"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-condensed"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteY="329dp"
            android:id="@+id/EmaileditText2"
            android:background="@android:color/white"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Email"
            android:orientation="vertical"
            android:paddingLeft="16dp" app:layout_constraintHorizontal_bias="1.0"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/SenhaeditText3"
            app:layout_constraintEnd_toEndOf="@+id/EmaileditText2"
            app:layout_constraintStart_toStartOf="@+id/EmaileditText2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/EmaileditText2"
            android:background="@android:color/white"
            android:hint="Senha"
            android:paddingLeft="16dp"/>

    <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/loginbutton2"
            app:layout_constraintEnd_toEndOf="@+id/SenhaeditText3"
            app:layout_constraintStart_toStartOf="@+id/SenhaeditText3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/SenhaeditText3"
            android:text="Entrar"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@android:color/holo_blue_dark"
            android:background="@android:color/white"/>
    <TextView
            android:text="Retornar "
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:id="@+id/retornar" app:layout_constraintEnd_toEndOf="@+id/loginbutton2"
            app:layout_constraintStart_toStartOf="@+id/loginbutton2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/loginbutton2"
            android:layout_marginEnd="8dp" android:textAlignment="center" android:textColor="@android:color/white"
            android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>